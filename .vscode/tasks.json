{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build C project (gcc)",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/week_1/main.c",
                "${workspaceFolder}/week_1/flag.c", // 여기에 두 파일이 포함되어 있음
                "-o",
                "${workspaceFolder}/week_1/crackme.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true // 🚩 이 작업만 기본값으로 설정
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            // ... (나머지 명령어 생략)
            "group": "build", // kind와 isDefault를 제거하고 "build"만 남김
            "detail": "Task generated by Debugger."
        }
    ]
}